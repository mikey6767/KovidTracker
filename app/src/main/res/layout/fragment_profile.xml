<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="30dp"
            android:stretchColumns="*"
            android:background="@drawable/bg_rounded_corner"
            android:padding="30dp">
            <TableRow>
                <Button
                    android:id="@+id/profile_editbtn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:text="EDIT"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="15sp"
                    android:layout_column="3" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="User Name"
                    android:layout_span="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="User id"
                    android:layout_span="4"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Age" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Gender"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Phone Number"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Vaxxed"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:padding="30dp"
            android:background="@drawable/bg_rounded_corner">
            <Button
                android:id="@+id/profile_his_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="check in history"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_baseline_history_24" />
            <Button
                android:id="@+id/profile_hs_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update health status"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_baseline_note_add_24" />
            <Button
                android:id="@+id/profile_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F. A. Q."
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_baseline_announcement_24" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:drawableLeft="@drawable/ic_baseline_logout_24"
        android:backgroundTint="@color/red"
        android:layout_gravity="bottom | center"
        android:layout_marginBottom="50dp"/>
</FrameLayout>