<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/loginbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_rounded_corner">

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/smoothpurple"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/et_registerEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signup"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_registerFullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_registerEmail"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/et_registerPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_registerFullName"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_registerIC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_registerPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_ic"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Identity Card Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_registerPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_registerIC"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextbg"
            android:drawableLeft="@drawable/ic_baseline_password_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Account Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/et_registerPassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/baumans"
            android:text="Sign Up Account"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_backlogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:text="Login"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </RelativeLayout>

</LinearLayout>