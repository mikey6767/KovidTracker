<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditprofileActivity"
    android:background="@drawable/inappbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/editprofilewindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_checkin_details">

                <ImageView
                    android:id="@+id/img_profilePictureChange"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_editprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_profilePictureChange"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/baloo"
                    android:text="Edit Profile"
                    android:textAlignment="center"
                    android:textColor="@color/smoothpurple"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/tv_editprofiledescp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_editprofile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="5dp"
                    android:text="Click the picture above and change your profile picture!"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_profileName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tv_editprofiledescp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittextbg"
                    android:drawableLeft="@drawable/ic_name"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/et_profileIC"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_profileName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextbg"
                    android:drawableLeft="@drawable/ic_ic"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Identity Card Number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_profileemail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_profileIC"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittextbg"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_profilephonenumber"
                    android:background="@drawable/edittextbg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/et_profileemail"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:inputType="phone"
                    android:drawableLeft="@drawable/ic_name"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Phone Number" />

                <Button
                    android:id="@+id/btn_updateprofile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/et_profilephonenumber"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:text="Submit Changes"
                    android:fontFamily="@font/baumans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_editpswdescp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_updateprofile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="15dp"
                    android:text="Click here to change password (optional)"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_updateprofilepassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/tv_editpswdescp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:text="Change Password"
                    android:fontFamily="@font/baumans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_backprofilefrag"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/btn_updateprofilepassword"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="Back"
                    android:fontFamily="@font/baumans"
                    android:textStyle="bold"
                    android:textSize="16dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/profileback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editprofilewindow"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_checkin_details">



            </RelativeLayout>


        </LinearLayout>






    </ScrollView>






</FrameLayout>