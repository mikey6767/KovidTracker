<?xml version="1.0" encoding="utf-8"?>
<!--TODO decide layout, put things here-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bg_dose_row"
        app:cardBackgroundColor="#fae17d"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_vaccines_24"/>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:paddingBottom="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/tv_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Dose "
                    android:layout_margin="10dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand: "
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sinovac"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Batch No: "
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01202110"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccine Place: "
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

                <TextView
                    android:id="@+id/tv_facility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="The MINES International Exhibition and ConventionCentre, HCO B"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccine Date: "
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-10-17"
                    android:textSize="15sp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>